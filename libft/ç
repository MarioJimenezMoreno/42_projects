#include "libft.h"

static void place_number(int n, char *str, int *i)
{
	if (n / 10)
		place_number(n / 10, str, i);
	str[*i] = (n % 10) + '0';
	*i++;
}

static void	calc_int_len(int n, int *len)
{
	while (n / 10)
	{
		n = n / 10;
		len++;
	}
}

char	*ft_itoa(int n)
{
	int	len;
	char *str;
	int i;
	
	i = 0 + (n < 0);
	len = 1;
	calc_int_len(n, &len);
	printf("%d",len);
	str = (char*)malloc(sizeof(char) * (len + (n < 0)));
	if (n < 0)
		str[0] = '-';
	place_number(n, str, &i);
	return (str);
}

int main()
{
	printf("%s",ft_itoa(-12345));
}
